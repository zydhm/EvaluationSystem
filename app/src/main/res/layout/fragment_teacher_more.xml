<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/more_user_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/more_user_info_iconId"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:src="@drawable/ic_user_info" />

        <TextView
            android:id="@+id/more_user_info_textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/more_user_info_iconId"
            android:text="个人信息"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignLeft="@+id/more_user_info_textId"
            android:layout_alignParentBottom="true"
            android:background="#D9D9D9" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_arrow"
            android:gravity="center"
            android:padding="4dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_test"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/more_test_iconId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:src="@drawable/ic_test" />

        <TextView
            android:id="@+id/more_test_textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/more_test_iconId"
            android:text="试卷"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignLeft="@+id/more_test_textId"
            android:layout_alignParentBottom="true"
            android:background="#D9D9D9" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_arrow"
            android:gravity="center"
            android:padding="4dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/more_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/more_logout_iconId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:src="@drawable/ic_logout" />

        <TextView
            android:id="@+id/more_logout_textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/more_logout_iconId"
            android:text="注销"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignLeft="@+id/more_logout_textId"
            android:layout_alignParentBottom="true"
            android:background="#D9D9D9" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_arrow"
            android:gravity="center"
            android:padding="4dp" />

    </RelativeLayout>

</LinearLayout>
