<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_selfTestResult_knowledgeTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:text="知识点内容:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_selfTestResult_knowledgeContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="知识点内容"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_selfTestResult_masteryTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="25dp"
                android:text="掌握程度:"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_selfTestResult_mastery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_selfTestResult_masteryTip"
                android:layout_centerHorizontal="true"
                android:text="掌握程度"
                android:textColor="@color/black" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>